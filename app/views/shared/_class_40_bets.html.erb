<div class="card-betting" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%=image_url("DSC05139_600x800.jpg")%>')">

  <div>
    <h2>Class 40</h2>
    <%= form_with url: bets_path(category: params[:category]), method: :post do |f| %>
      <div class="my-3"><%= f.select :skipper_1, Boat::CLASS40, prompt: 'Vainqueur' %></div>
      <div class="my-3"><%= f.select :skipper_2, Boat::CLASS40, prompt: 'Deuxième' %></div>
      <div class="my-3"><%= f.select :skipper_3, Boat::CLASS40, prompt: 'Troisième' %></div>
      <div class="my-3"><%= f.submit "Bon vent !", class: "btn btn-bet" %></div>
    <% end %>
  </div>

</div>
