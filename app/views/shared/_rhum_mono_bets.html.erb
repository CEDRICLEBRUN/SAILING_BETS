<div class="card-betting" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%=image_url("DSC05296_600x800.jpg")%>')">

  <div>
    <h2>Rhum Mono</h2>
    <%= form_with url: bets_path(category: params[:category]), method: :post do |f| %>
      <div class="my-3"><%= f.select :skipper_1, Boat::RHUMMONO, prompt: 'Vainqueur' %></div>
      <div class="my-3"><%= f.select :skipper_2, Boat::RHUMMONO, prompt: 'Deuxième' %></div>
      <div class="my-3"><%= f.select :skipper_3, Boat::RHUMMONO, prompt: 'Troisième' %></div>
      <div class="my-3"><%= f.submit "Bon vent !", class: "btn btn-bet" %></div>
    <% end %>
  </div>

</div>
